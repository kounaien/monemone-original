<% posts.each do |post| %>
    <div class="block">
        <div class="block-header">
                <span>
                    <%= link_to user_path(post) do %>
                        <%= attachment_image_tag post.user, :profile_image, size: '50x50', fallback: "no_image.jpg", class: "rounded-image" %>
                        <%= post.user.name %>
                    <% end %>
                </span>
            </div>
        <div class="block-image">
            <%# <%= attachment_image_tag post, :image, size: '100x100', fallback: "no_image.jpg" %> %>
        </div>
        <div class="block-content">
            <h3><%= link_to "post.title", post_path(post.id) %></h3>
            <div class="caption">
                <p><%= post.caption %></p>
                <p><%= post.fee %></p>
            </div>
            <section>
                <span>
                    <%= link_to post_path(post) do %>
                        <i class="fa fa-comment-o" aria-hidden="true"></i>
                    <% end %>
                </span>
                <span>
                    <%= render "favorite", post: post %>
                </span>
                <span><%= post.post_comment.count %>件のコメント</span>
            </section>
        </div>        
    </div>
<% end %>